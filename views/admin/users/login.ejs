<%- include('../../partials/header.ejs') %>

<div class="container">
  <div class="card mt-5">
    <div class="card-header">Login de admin</div>
    <div class="card-body">
      <form method="POST" action="/admin/authenticate">
        <input
          name="email"
          type="email"
          placeholder="email@exemplo.com"
          class="form-control"
        />

        <input name="password" type="password" class="form-control mt-1" />
        <button
          type="submit"
          class="btn btn-success mt-1"
          style="float: right;"
        >
          Logar
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/scripts.ejs') %>
